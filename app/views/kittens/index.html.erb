<section>
  <h1 class="font-bold text-4xl">All Kittens</h1>
  <div class="pt-8">
    <% if @kittens.empty? %>
      <div class="rounded-md py-6 text-center font-bold bg-orange-200 text-2xl text-orange-500" >
        We have no kittens ğŸ˜¿
      </div>
    <% else %>
      <ul class="space-y-4">
        <% @kittens.each do |kitten| %>
          <li class="flex justify-between items-center">
            <%= link_to kitten.name, kitten, class: "text-2xl font-semibold" %>
            <%= button_to "Delete", kitten, method: :delete, class: "btn-danger" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</section>